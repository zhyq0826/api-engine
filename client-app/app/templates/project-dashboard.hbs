<div class="ui grid">
    {{#ui-column wide=4 }}
        <div class="ui segment cc-project-segment" >
            <div class="ui selection list" style="background:#f1f1f1" >
                {{#each model.groups as |group|}}
                    {{#ui-group-item model=group }}{{/ui-group-item}}
                {{/each}}
            </div>
        </div>
    {{/ui-column}}

    {{#ui-column wide=12 }}
        <div class="ui segment">
            {{outlet}}
        </div>
    {{/ui-column}}
</div>
